{
  "name": "@react-force/core",
  "description": "Foundational components for React applications",
  "version": "2.4.1",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "build": "yarn build-src && yarn build-declaration",
    "build:local": "yarn build && yarn lint && yarn test:coverage",
    "build-src": "babel src --root-mode upward --out-dir dist --source-maps --extensions \".ts,.tsx\" --ignore **/*.story.tsx,**/*.test.ts,**/*.test.tsx,**/stories,**/test",
    "build-declaration": "tsc --emitDeclarationOnly",
    "build-storybook": "rimraf ../../docs && build-storybook -o ../../docs",
    "del-dist": "rimraf dist",
    "format": "prettier --write 'src/**/*.ts*'",
    "lint": "eslint 'src/**/*.ts*'",
    "prebuild": "yarn del-dist",
    "storybook": "start-storybook -p 6006",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "jest --watch",
    "test:coverage": "jest --coverage --no-cache"
  },
  "dependencies": {
    "@react-force/utils": "^2.2.0"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.x",
    "@material-ui/icons": "^4.x",
    "@material-ui/lab": "^4.x",
    "classnames": "^2.x",
    "react": "^16.x",
    "uuid": "^8.x"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "(\\.(test|spec))\\.(ts|tsx)$",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "./src/test/setupTestsAfterEnv.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
