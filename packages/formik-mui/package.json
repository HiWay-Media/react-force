{
  "name": "@react-force/formik-mui",
  "description": "Formik components using Material-UI",
  "version": "2.1.1",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "build": "yarn build-src && yarn build-declaration",
    "build:local": "yarn build && yarn lint && yarn test:coverage",
    "build-src": "babel src --root-mode upward --out-dir dist --source-maps --extensions \".ts,.tsx\" --ignore **/*.story.tsx,**/*.test.ts,**/*.test.tsx,**/stories,**/test",
    "build-declaration": "tsc --emitDeclarationOnly",
    "build-storybook": "rimraf ../../docs && build-storybook -o ../../docs",
    "del-dist": "rimraf dist",
    "format": "prettier --write 'src/**/*.ts*'",
    "lint": "eslint 'src/**/*.ts*'",
    "prebuild": "yarn del-dist",
    "storybook": "start-storybook -p 6006",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "echo No tests in this package",
    "test:coverage": "echo No tests in this package"
  },
  "dependencies": {
    "@date-io/moment": "^1.3.13",
    "@material-ui/pickers": "^3.2.10",
    "@nareshbhatia/slate-editor": "^1.3.1",
    "@react-force/core": "^2.3.0",
    "@react-force/date-utils": "^3.2.0",
    "formik": "^2.1.4",
    "immutable": "^4.0.0-rc.12",
    "moment": "^2.26.0",
    "moment-timezone": "^0.5.31",
    "react-text-mask": "^5.4.3",
    "slate": "0.47.9",
    "slate-html-serializer": "0.8.11",
    "slate-react": "0.22.10",
    "yup": "^0.29.1"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.x",
    "@material-ui/lab": "^4.x",
    "react": "^16.x"
  },
  "devDependencies": {
    "@types/moment-timezone": "^0.5.13",
    "@types/react-text-mask": "^5.4.6",
    "@types/yup": "^0.29.2"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "(\\.(test|spec))\\.(ts|tsx)$",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "./src/test/setupTestsAfterEnv.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
