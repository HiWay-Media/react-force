{
  "name": "@react-force/utils",
  "description": "JavaScript utilities",
  "version": "2.1.0",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "build": "yarn build-src && yarn build-declaration",
    "build:local": "yarn build && yarn lint && yarn test:coverage",
    "build-src": "babel src --root-mode upward --out-dir dist --source-maps --extensions \".ts,.tsx\" --ignore **/*.story.tsx,**/*.test.ts,**/*.test.tsx,**/stories,**/test",
    "build-declaration": "tsc --emitDeclarationOnly",
    "del-dist": "rimraf dist",
    "format": "prettier --write 'src/**/*.ts*'",
    "lint": "eslint 'src/**/*.ts*'",
    "prebuild": "yarn del-dist",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "jest --watch",
    "test:coverage": "jest --coverage --no-cache"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "(\\.(test|spec))\\.(ts|tsx)$",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
