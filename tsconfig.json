{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types", "scripts", "example"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@react-force/core": ["packages/core/src"],
      "@react-force/date-utils": ["packages/date-utils/src"],
      "@react-force/mock-data": ["packages/mock-data/src"],
      "@react-force/models": ["packages/models/src"],
      "@react-force/utils": ["packages/utils/src"],
      "$test/*": ["test/*"]
    }
  }
}
